<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <style>
        label{
            color: antiquewhite;
        }
        .form-control{
            background: black;
        }
    </style>

</head>

<body style="background-color: black;">
    <!-- Navabar -->
    <nav class="navbar navbar-dark navbar-expand-lg bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Digital Library</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    
                </ul>
                <form class="d-flex" role="search" action="/login">
                    <p style="color: green;" class="mx-3">Already have an account?</p>
                    <button class="btn btn-outline-success" type="submit">Login</button>
                </form>
            </div>
        </div>
    </nav>
    <!-- Navbar End -->
    <div>
        <marquee>
            <p style="font-size: 30px;  color: springgreen;">" {{msg}} "</p>
        </marquee>
    </div>
    {{#if show}}
        <div class="alert alert-success container" role="alert">
            Registration Successful !!!
        </div>
    {{/if}}
    {{#if showEmailExistError}}
        <div class="alert alert-danger container" role="alert">
            Email Already Exist !!!
        </div>
    {{/if}}
    {{#if false}}
        {{#each l}}
        <div class="alert alert-success container" role="alert">
            {{id}}
        </div>
        {{/each}}
    {{/if}}
    <div class="container">
        <form action="?" method="POST">
            <div class="dropdown mb-3">
                <label for="role">I'm a</label>
                <select name="role" id="role" class="form-control btn btn-outline-light" aria-label="Default select example">
                    <option selected disabled>-- Select Your Role --</option>
                    <option value="visitor">Visitors</option>
                    <option value="manager">Managers</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="name">Full Name</label>
                <input name="name" type="text" class="form-control" id="name" required placeholder="Type your name">
            </div>
            <div class="mb-3">
                <label for="email">Email address</label>
                <input name="email" type="email" class="form-control" id="email" required placeholder="Type your email">
            </div>
            <div class="mb-3">
                <label for="password">Password</label>
                <input name="password" type="password" class="form-control" id="password" required placeholder="Type your password">
            </div>
            <div class="mb-3">
                <label for="address">Address</label>
                <input name="address" type="text" class="form-control" id="address" required placeholder="Type your address">
            </div>
            <div class="mt-1">
                <button type="submit" class="btn btn-outline-success">Register</button>
                <button type="reset" class="btn btn-success">Clear !</button>
            </div>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
        crossorigin="anonymous"></script>
</body>
</html>